# Production Environment Variables for Render
# Copy these variables and set them in Render's environment settings

NODE_ENV=PRODUCTION
PORT=3000

# Database - REQUIRED: Replace with your MongoDB Atlas connection string
# Get this from MongoDB Atlas -> Connect -> Connect your application
MONGODB_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/gatekeeper_api?retryWrites=true&w=majority

# JWT Secrets - REQUIRED: Generate strong secrets for production (at least 32 characters)
# You can generate these using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters-long-production-2024
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-at-least-32-characters-long-production-2024
JWT_REFRESH_EXPIRES_IN=7d
JWT_ALGORITHM=HS256
JWT_ISSUER=gatekeeper-api
JWT_AUDIENCE=gatekeeper-client

# Session & Security - REQUIRED: Generate strong secrets
SESSION_SECRET=your-super-secure-session-secret-at-least-32-characters-long-production-2024
COOKIE_SECRET=your-super-secure-cookie-secret-at-least-32-characters-long-production-2024
BCRYPT_ROUNDS=12

# CORS - Replace with your frontend domain
CLIENT_URL=https://your-frontend-domain.com

# Security Settings
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Server Configuration
SERVER_TIMEOUT=120000
KEEP_ALIVE_TIMEOUT=65000
HEADERS_TIMEOUT=66000
SHUTDOWN_TIMEOUT=30000

# Health Check
HEALTH_CHECK_INTERVAL=60000
ENABLE_METRICS=true

# Database Connection Settings
DB_MAX_POOL_SIZE=20
DB_MIN_POOL_SIZE=5
DB_SERVER_SELECTION_TIMEOUT=15000
DB_SOCKET_TIMEOUT=60000
DB_CONNECT_TIMEOUT=30000
DB_MAX_IDLE_TIME=60000